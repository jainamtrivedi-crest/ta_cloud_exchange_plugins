{
    "name": "ServiceNow",
    "description": "Create incidents on ServiceNow platform.",
    "id": "servicenow_itsm",
    "version": "1.0.0",
    "pulling_supported": false,
    "receiving_supported": true,
    "configuration": [
        {
            "label": "Authentication",
            "name": "auth",
            "type": "step",
            "fields": [
                {
                    "label": "Instance URL",
                    "key": "url",
                    "type": "text",
                    "default": "",
                    "mandatory": true,
                    "description": "ServiceNow instance URL."
                },
                {
                    "label": "Username",
                    "key": "username",
                    "type": "text",
                    "default": "",
                    "mandatory": true,
                    "description": "Instance username."
                },
                {
                    "label": "Password",
                    "key": "password",
                    "type": "password",
                    "default": "",
                    "mandatory": true,
                    "description": "Instance password."
                }
            ]
        },
        {
            "label": "Configuration Parameters",
            "name": "params",
            "type": "step",
            "fields": [
                {
                    "label": "Destination Table",
                    "key": "table",
                    "type": "choice",
                    "choices": [
                        {
                            "key": "Security Incidents",
                            "value": "sn_si_incident"
                        },
                        {
                            "key": "Incidents",
                            "value": "incident"
                        }
                    ],
                    "default": "sn_si_incident",
                    "mandatory": true,
                    "description": "Name of the table where incidents will be created."
                }
            ]
        }
    ]
}